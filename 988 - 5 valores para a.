int main() {
  float numero;
  int count=0 , i=0;
  
  while(i < 5){
    printf("Digite um valor:\n", numero);
    scanf("%f", &numero);
    i++;
    if(numero<0){
    count++;
  }
  }
    printf("Foram digitados %d numeros negativos", count);
